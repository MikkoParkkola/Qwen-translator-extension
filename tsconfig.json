{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "popup/*": ["src/popup/*"]
    }
  },
  "include": [
    "types/**/*.d.ts",
    "types/background.d.ts",
    "types/contentScript.d.ts",
    "types/providers/**/*.d.ts"
  ]
}
